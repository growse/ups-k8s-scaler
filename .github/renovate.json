{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":rebaseStalePrs",
    ":disableDependencyDashboard"
  ],
  "assignees": ["growse"],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV NUT_VERSION=(?<currentValue>.*?)\\n"],
      "depNameTemplate": "nut",
      "datasourceTemplate": "repology"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV POETRY_VERSION=(?<currentValue>.*?)\\n"],
      "depNameTemplate": "poetry",
      "datasourceTemplate": "pypi"
    }
  ]
}
